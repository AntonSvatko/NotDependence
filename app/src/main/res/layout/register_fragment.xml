<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_text_field_register"
        android:layout_width="match_parent"
        style="@style/TextInputLayout.OutlineBox.CustomFont"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:inputType="text"
            android:id="@+id/edit_text_login_register"
            android:hint="Email"
            android:layout_height="56dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_text_field_register"
        android:layout_width="match_parent"
        style="@style/TextInputLayout.OutlineBox.CustomFont"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/email_text_field_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:id="@+id/edit_text_password_register"
            android:hint="Password"
            android:layout_height="56dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_confirm_text_field_register"
        android:layout_width="match_parent"
        style="@style/TextInputLayout.OutlineBox.CustomFont"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@id/password_text_field_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:id="@+id/edit_text_password_confirm_register"
            android:hint="Confirm Password"
            android:layout_height="56dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_continue_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_confirm_text_field_register"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>